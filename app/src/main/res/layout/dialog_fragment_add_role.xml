<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:minWidth="@dimen/popup_width"
    android:layout_gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#72009688"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Character"
                android:textSize="17sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgvCharacter"
                android:layout_width="@dimen/image_medium_width"
                android:layout_height="@dimen/image_medium_height"
                android:scaleType="fitXY"
                android:src="@drawable/no_image" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvActorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Assigned Actor"
                android:textSize="17sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgvAssignedActor"
                android:layout_width="@dimen/image_medium_width"
                android:layout_height="@dimen/image_medium_height"
                android:scaleType="fitXY"
                android:src="@drawable/no_image" />

        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:background="@drawable/line_black"
        android:layout_gravity="center_vertical"
        android:layout_height="4dp"
        android:layout_width="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="datetime"
            android:hint="Participate Date"
            android:layout_weight="0.95"
            android:textSize="19sp" />
        <Button
            android:id="@+id/btnPickStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick date"
            android:layout_weight="0.05"
            android:textSize="12sp"
            />
    </LinearLayout>

    <TextView
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:text="Description" />

    <EditText
        android:gravity="start"
        android:id="@+id/edtRoleDesc"
        android:layout_height="200dp"
        android:layout_width="match_parent"
        android:text="Description" />

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="5dp">

        <Button
            android:background="@drawable/button_primary"
            android:id="@+id/btnAddRole"
            android:layout_height="@dimen/button_small_height"
            android:layout_width="@dimen/button_small_width"
            android:text="Add"
             />

        <Button
            android:background="@drawable/button_cancel"
            android:id="@+id/btnCancel"
            android:layout_height="@dimen/button_small_height"
            android:layout_marginLeft="50dp"
            android:layout_width="@dimen/button_small_width"
            android:text="Cancel" />
    </LinearLayout>

</LinearLayout>

