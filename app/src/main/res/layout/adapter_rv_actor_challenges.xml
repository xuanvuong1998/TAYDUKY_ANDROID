<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="20dp"
    android:elevation="10dp"
    android:orientation="vertical"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/card_item"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvChallengeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/comic"
            android:text="TEN KIEP NAN"
            android:textColor="@color/card_title"
            android:textSize="30dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvChallengeTitle"
            android:text="Location"
            android:layout_marginTop="12dp"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvChallengeLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15sp"
            android:layout_below="@id/tvChallengeTitle"
            android:background="@drawable/color_card_view_gradient4"

            android:layout_marginTop="12dp"
            android:textSize="22sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Start Date"

            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvStartDate"
            android:background="@drawable/color_card_view_gradient4"
            android:padding="15sp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Finished Date"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvFinishedDate"
            android:layout_width="match_parent"
            android:padding="15sp"

            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/color_card_view_gradient4"
            android:textSize="22sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Role"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvRole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="15sp"

            android:background="@drawable/color_card_view_gradient4"
            android:textSize="22sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Role Desc"
            android:textSize="20dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvRoleDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="15sp"
            android:background="@drawable/color_card_view_gradient4"
            android:textSize="22sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>