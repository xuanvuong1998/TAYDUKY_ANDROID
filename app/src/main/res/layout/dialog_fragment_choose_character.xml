<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="@dimen/popup_width"
    android:orientation="vertical"
    tools:context=".ui.fragments.admin.AdminCharactersFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <EditText
            android:layout_margin="5dp"
            android:id="@+id/edtCharacterSearch"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="Search"
            android:inputType="textFilter"
            android:textSize="20sp"
            />
        <Button
            android:layout_margin="5dp"
            android:id="@+id/btnChooseCharacter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_primary"
            android:text="Choose"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <include layout="@layout/recyclerview_with_swipe_refresh"/>

</LinearLayout>